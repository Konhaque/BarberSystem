<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#2f3640"
    android:layout_height="match_parent"
    tools:context=".Login">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/barber"
        android:layout_marginTop="50dp"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/container"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="50dp">
        <EditText
            android:id="@+id/cpf_cnpj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="CPF/CNPJ"
            android:inputType="number"
            android:textColor="#000"
            android:maxLength="14"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColorHint="#000"/>
         <EditText
             android:id="@+id/senha"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="70dp"
             android:hint="Senha"
             android:layout_marginLeft="10dp"
             android:layout_marginRight="10dp"
             android:inputType="textPassword"
             android:textColor="#000"
             android:textColorHint="#000"
             android:layout_marginBottom="75dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Esqueci minha senha"
            android:gravity="center"
            android:layout_marginTop="130dp"
            android:fontFamily="serif"
            android:textSize="13dp"
            android:textColor="#000"/>
    </FrameLayout>

    <Button
        android:id="@+id/logar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Entrar"
        android:background="#95afc0"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="-20dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#fff"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/cadastrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#95afc0"
        android:backgroundTint="@android:color/transparent"
        android:textColor="#fff"
        android:text="Cadastrar"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#fff"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="110dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Produto desenvolvido por: "
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:id="@+id/texto"
            android:textColor="#fff"
            android:fontFamily="serif"
           />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/beta_branco"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/texto"/>

    </RelativeLayout>



</LinearLayout>